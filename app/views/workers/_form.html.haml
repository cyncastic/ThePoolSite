= form_for(@worker) do |f|
  - if @worker.errors.any?
    #error_explanation
      %h2
        = pluralize(@worker.errors.count, "error") 
        prohibited this worker from being saved:
      %ul
        - @worker.errors.full_messages.each do |message|
          %li= message
  %fieldset
    %legend Contact Info
    .field.full-name
      = f.label :full_name, class: 'req'
      = f.text_field :full_name
    .field.phone
      = f.label :phone
      = f.text_field :phone
    .field.email
      = f.label :email
      = f.text_field :email
    .field.address
      = f.label :address
      = f.text_field :address
    .field.city
      = f.label :city
      = f.text_field :city
    .field.state
      = f.label :state
      = f.select :state, us_states, selected: 'NY'

    .field.zip
      = f.label :zip
      = f.text_field :zip
  %fieldset
    %legend Notes
    .field
      = f.text_area :notes
  .actions
    = f.submit class: 'btn'