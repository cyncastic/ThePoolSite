= form_for(@worker) do |f|
  - if @worker.errors.any?
    #error_explanation
      %h2
        = pluralize(@worker.errors.count, "error") 
        prohibited this worker from being saved:
      %ul
        - @worker.errors.full_messages.each do |message|
          %li= message

  %fieldset
    %legend Form Heading
    .field
      = f.label :full_name, class: 'req'
      = f.text_field :full_name
    .field
      = f.label :phone
      = f.text_field :phone
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :address
      = f.text_field :address
    .field
      = f.label :city
      = f.text_field :city
    .field
      = f.label :state
      = f.text_field :state
    .field
      = f.label :zip
      = f.text_field :zip
    .field
      = f.label :start_date
      = f.text_field :start_date
    .actions
      = f.submit class: 'btn'