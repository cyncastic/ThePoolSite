%h1= @worker.full_name 

%fieldset 
  %legend Contact Info
  %p
    %strong Phone:
    = @worker.phone
  %p
    %strong Email:
    = @worker.email
  %p
    %strong Address:
    %br/
    = @worker.address
    %br/
    #{ @worker.city }, #{@worker.state} #{@worker.zip}

%fieldset 
  %legend Notes
  = @worker.notes

%ul.actions
  %li= link_to 'Edit', edit_worker_path(@worker), class: 'button'