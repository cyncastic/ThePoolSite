%h1 Workers
%table
  %thead
    %tr
      %th Name
      %th Phone
      %th Address
  %tbody
    - @workers.each do |worker|
      %tr
        %td
          = link_to worker.full_name, worker
        %td= worker.phone
        %td
          = worker.address
          %br/
          #{worker.city}, #{worker.state} #{worker.zip}
%ul.actions
  %li= link_to 'New Worker', new_worker_path, class: 'button'
