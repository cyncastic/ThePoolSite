%h1 Listing Workers
%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Phone
      %th Email
      %th Address
      %th City
      %th State
      %th Zip
      %th Start Date
      %th End Date
      %th 
  %tbody
    - @workers.each do |worker|
      %tr
        %td= worker.first_name
        %td= worker.last_name
        %td= worker.phone
        %td= worker.email
        %td= worker.address
        %td= worker.city
        %td= worker.state
        %td= worker.zip
        %td= worker.start_date
        %td= worker.end_date
        %td.actions
          = link_to 'Show', worker
          = link_to 'Edit', edit_worker_path(worker)
          = link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Worker', new_worker_path
