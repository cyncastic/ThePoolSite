%h1 Listing Customers
%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Phone
      %th Email
      %th Address
      %th City
      %th State
      %th Zip
      %th Notes
      %th
  %tbody
    - @customers.each do |customer|
      %tr
        %td= customer.first_name
        %td= customer.last_name
        %td= customer.phone
        %td= customer.email
        %td= customer.address
        %td= customer.city
        %td= customer.state
        %td= customer.zip
        %td= customer.notes
        %td
          = link_to 'Show', customer
          = link_to 'Edit', edit_customer_path(customer)
          = link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Customer', new_customer_path
