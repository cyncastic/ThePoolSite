%h1 Listing jobs
%table
  %thead
    %tr
      %th Date
      %th Customer
      %th Worker
  %tbody
    - @jobs.each do |job|
      %tr
        %td= link_to job.date, job
        %td= job.customer.full_name
        %td= job.worker.full_name
%ul.actions
  %li= link_to 'New Job', new_job_path, class: 'button'