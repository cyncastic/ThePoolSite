
%fieldset
  %legend Additional Info
  %p
    %strong Best day ever:
    = @job.best_day_ever

%fieldset
  %legend Info

  %p
    %strong Date:
    = @job.date

  %p
    %strong Completed:
    = @job.completed
  %p
    %strong Customer:
    = @job.customer.full_name
  %p
    %strong Job type:
    = @job.job_type.name

%fieldset
  %legend Info
  %p
    %strong Worker:
    = @job.worker.full_name
  %p
    %strong Worker notes:
    = @job.worker_notes


%ul.actions
  %li= link_to 'Edit', edit_job_path(@job), class: 'button'
  %li= link_to 'Destroy', @job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button destroy'