%h1 Listing Job Types
%table
  %thead
    %tr
      %th Name
      %th
  %tbody
    - @job_types.each do |job_type|
      %tr
        %td= job_type.name
        %td.actions
          = link_to 'Edit', edit_job_type_path(job_type)
          = link_to 'Destroy', job_type, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Job type', new_job_type_path, class: 'btn'