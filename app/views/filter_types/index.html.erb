<h1>Listing filter_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filter_types.each do |filter_type| %>
      <tr>
        <td><%= filter_type.name %></td>
        <td><%= link_to 'Show', filter_type %></td>
        <td><%= link_to 'Edit', edit_filter_type_path(filter_type) %></td>
        <td><%= link_to 'Destroy', filter_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Filter type', new_filter_type_path %>
